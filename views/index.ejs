<div class="author">
    <h1 class="author_heading">The Crypto Chronicles: Tales of Innovation, Investment, and the Future of Finance </h1>
    <p class="author_body">Decrypting the Crypto Craze</p>
</div>

<img src="https://wallpaperaccess.com/full/1424856.jpg" alt="Crypto"
    class="blog1">
<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <span class="articles-list_date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>

            <% }) %>
    </ul>


    <% if (nextPage !==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>




</section>